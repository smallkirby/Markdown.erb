{
  "name": "markdown-erb",
  "displayName": "markdown.erb",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.md.erb"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-erb.watchFile",
        "title": "Watch File"
      },
      {
        "command": "markdown-erb.unwatchFile",
        "title": "Unwatch File"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "markdownErbTreeview",
          "name": "Markdown.erb"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "markdown-erb.watchFile",
          "when": "view == markdownErbTreeview && viewItem == erb-unwatched"
        },
        {
          "command": "markdown-erb.unwatchFile",
          "when": "view == markdownErbTreeview && viewItem == erb-watched"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smallkirby/Markdown.erb.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "erb": "^1.3.3",
    "fs": "^0.0.1-security"
  }
}
